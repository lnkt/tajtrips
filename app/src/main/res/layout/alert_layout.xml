<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/camera"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gallery"
        />
    <ImageView
        android:id="@+id/gallery"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_gallery"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintLeft_toRightOf="@+id/camera"
        />
    <TextView
        android:id="@+id/cameraText"
        android:text="Select From Camera"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera"
        app:layout_constraintRight_toLeftOf="@+id/galleryText"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/galleryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select From Gallery"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/cameraText"
        app:layout_constraintTop_toBottomOf="@+id/gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>