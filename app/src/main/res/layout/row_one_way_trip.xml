<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edt_shape_rectangle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="Trip ID"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_trip_id_one_way"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text="1111AABB"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="Trip Type"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_trip_type_one_way"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text="ONE WAY"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="Car Type"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/tv_car_type_one_way"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text="Sedan"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_trip_city_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="Total Kms"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total_kms_one_way"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text="5000"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="Total Hours"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total_hours_one_way"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text=" 5"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="Vendor Price"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_trip_price_one_way"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text="Rs. 5000"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="Extra Kms"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_extra_kms_one_way"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text="100"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="Extra Hours"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_extra_hours_one_way"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text=" 3"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="Start Date"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_start_date_one_way"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text="12/10/2020"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="End Date"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_end_date_one_way"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="Start Time"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_start_time_one_way"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text="12:20 pm"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3.5"
                        android:gravity="center|left"
                        android:paddingStart="10dp"
                        android:text="Remark"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_remark_one_way"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"

                        android:text="Welcom "
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_accept_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5sp"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:text="Accept"
                            android:textColor="@color/white_color" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5sp"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:text="Cancel"
                            android:textColor="@color/white_color" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>