<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.LocalTripMyBid_Fragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="75">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edt_shape_rectangle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Trip Type:Local Trip"
                        android:textColor="@color/black_color"
                        android:textSize="17sp"
                        android:textStyle="bold"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3.5"
                            android:gravity="center|left"
                            android:paddingStart="10dp"
                            android:text="Car Type"
                            android:textColor="@color/black_color"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/black_color"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="7"
                            android:gravity="center|left"
                            android:text="Sedan"
                            android:textColor="@color/black_color"
                            android:textStyle="bold"
                            android:textSize="15sp" />





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3.5"
                            android:gravity="center|left"
                            android:paddingStart="10dp"
                            android:text="Lucknow"
                            android:textColor="@color/black_color"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".2"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/black_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text_stationid"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="7"
                            android:gravity="center|left"
                            android:text="Agra"
                            android:textColor="@color/black_color"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3.5"
                            android:gravity="center|left"
                            android:paddingStart="10dp"
                            android:text="Trip Price"
                            android:textColor="@color/black_color"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".2"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/black_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textforchange"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="7"
                            android:gravity="center|left"
                            android:text="Rs. 5000"
                            android:textColor="@color/black_color"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3.5"
                            android:gravity="center|left"
                            android:paddingStart="10dp"
                            android:text="Start Date"
                            android:textColor="@color/black_color"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".2"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/black_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textdate"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="7"
                            android:gravity="center|left"
                            android:text="12/10/2020"
                            android:textColor="@color/black_color"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3.5"
                            android:gravity="center|left"
                            android:paddingStart="10dp"
                            android:text="Start Time"
                            android:textColor="@color/black_color"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".2"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/black_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/texttime"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="7"
                            android:gravity="center|left"
                            android:text="12:20 pm"
                            android:textColor="@color/black_color"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3.5"
                            android:gravity="center|left"
                            android:paddingStart="10dp"
                            android:text="My Bid"
                            android:textColor="@color/black_color"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".2"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/black_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textMyBid"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="7"
                            android:gravity="center|left"
                            android:text="Rs. 4800"
                            android:textColor="@color/black_color"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="5"
                            android:gravity="center|left"
                            android:paddingStart="10dp"
                            android:text="Status"
                            android:textColor="@color/black_color"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".2"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/black_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textStatus"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="4"
                            android:gravity="center|left"
                            android:text="Approved"
                            android:textColor="@color/black_color"
                            android:textSize="15sp"
                            android:textStyle="bold"/>


                        <ImageView
                            android:id="@+id/iv_approved"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="3"
                            android:layout_gravity="left"
                            android:src="@drawable/ic_approved"/>


                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="3"
                            android:layout_gravity="left" />
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:text="Enter Amount "
                                android:textColor="@color/black_color" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:hint="Rs 2000"
                                android:inputType="number"
                                android:textColor="@color/black_color" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5sp"
                                android:background="@color/colorPrimaryDark"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:text="Cancel Bid"
                                android:textColor="@color/white_color" />


                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5sp"
                                android:background="@color/colorPrimaryDark"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:text="Cancel"
                                android:textColor="@color/white_color" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>